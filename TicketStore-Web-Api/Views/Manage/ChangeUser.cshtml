@using TicketStore_Web_Api.Controllers
@using TicketStore_Web_Api.Features.DtoModels.User
@model EditUser

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .ChangeUserBody {
            display: flex;
            /* justify-content: center; */
            flex-direction:column;
            align-items: center;
            height: 100vh;
            background-color: aliceblue;
            margin: 0;
            padding: 0;
        }

            .ChangeUserBody h2{
                margin-bottom:20px;
            }

        .ChangeUserForm {
            display:inline-block;
            width: 250px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .ChangeUserForm div {
                margin-bottom: 15px;
            }

        .user-btn {
            background: #222222;
            padding: 10px 25px;
            border-radius: 4px;
            font-size: 14px;
            line-height: 18px;
            text-align: center;
            letter-spacing: 2px;
            text-transform: uppercase;
            color: #FFFFFF;
            border: none;
            transition: background-color 0.3s ease;
            cursor: pointer;
            width: 100%;
        }

            .user-btn:hover {
                background-color: #CCCCCC;
            }

        .form-control {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>
    <div class="ChangeUserBody">
        <h2>Введите изменения</h2>
        <div class="ChangeUserForm">
            @using (Html.BeginForm(nameof(ManageController.UpdateUser), ManageController.Manage, FormMethod.Post))
            {
                @Html.HiddenFor(model => model.ClientEmail)
                @Html.HiddenFor(model => model.IsnNode)
                <div>
                    <label>Имя</label>
                    @Html.TextBoxFor(model => model.ClientName, new { @class = "form-control", @Value = Model.ClientName })
                </div>
                <div>
                    <label>Фамилия</label>
                    @Html.TextBoxFor(model => model.ClientSurname, new { @class = "form-control" })
                </div>
                <div>
                    <label>Отчество</label>
                    @Html.TextBoxFor(model => model.ClientLastName, new { @class = "form-control" })
                </div>
                <button type="submit" class="user-btn">Сохранить</button>
            }
        </div>
    </div>
</body>
</html>